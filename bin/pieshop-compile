#!/usr/bin/env node 

var path = require('path'),
    fs = require('fs'),
    lib = path.join(path.dirname(fs.realpathSync(__filename)), '../../lib'),
    files = ["namespace.js","pieshop.settings.js","pieshop.backends.js","pieshop.transports.js","pieshop.core.js"],
    output = [],
    full_output = null,
    sys = require('sys');

for(var i = 0, len = files.length; i < len; ++i) {
    var filename = path.join(lib, files[i]);
    output.push(fs.readFileSync(filename));
}
full_output = output.join('\n');

sys.puts(full_output);
